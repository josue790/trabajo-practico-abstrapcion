from abc import ABC, abstractmethod
class Pago(ABC):
    @abstractmethod
    def procesar_pago(self, monto):
        pass
class TarjetaCredito(Pago):
    def procesar_pago(self, monto):
        return f"Procesando pago de ${monto} con tarjeta de cr√©dito."
class PayPal(Pago):
    def procesar_pago(self, monto):
        return f"Procesando pago de ${monto} mediante PayPal."
